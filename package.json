{
  "//": "JSHint configuration - http://jshint.com/docs/options/",
  "name": "kth-style",
  "version": "6.0.0",
  "description": "KTH CSS. A custom build of Bootstrap 4. The purpose of this project is to provide the essential design and style for applications within KTH and make the development process of these applications faster.",
  "automaticPublish": "true",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "uri": "https://github.com/KTH/kth-style"
  },
  "author": {
    "name": "KTH",
    "email": "infosys@kth.se",
    "url": "https://github.com/KTH"
  },
  "keywords": [
    "style",
    "design",
    "scss",
    "icons"
  ],
  "homepage": "https://github.com/KTH/kth-style#readme",
  "bugs": {
    "url": "https://github.com/KTH/kth-style/issues"
  },
  "scripts": {
    "//": "Parcel installs css, images and javascript",
    "test": "echo \"ok\"",
    "build": "./build-package.sh prod",
    "build-dev": "./build-package.sh dev",
    "prepare": "husky install && npm run build",
    "lint": "eslint \"public/**/*.{js,jsx}\" --quiet",
    "lint-v": "eslint \"public/**/*.{js,jsx}\" ",
    "sass-lint": "./node_modules/.bin/sass-lint --config ./.sass-lint.yml './public/sass/**/*.scss' --verbose --no-exit",
    "parcel-js-prod": "parcel build --no-source-maps --dist-dir dist/js --no-content-hash ./public/js/*.js ",
    "parcel-js": "parcel build ./public/js/*.js --dist-dir dist/js",
    "parcel-sass-prod": "parcel build --no-source-maps --no-content-hash --public-url ./ ./public/sass/kth-bootstrap.scss --dist-dir dist/css",
    "parcel-sass": "NODE_ENV=development parcel build ./public/sass/kth-bootstrap.scss --no-minify --dist-dir dist/css --public-url ./",
    "parcel-watch": "concurrently \"parcel watch ./public/js/*.js -d dist/js\" \"parcel watch ./public/sass/kth-bootstrap.scss --dist-dir dist/css  --public-url ./\"",
    "create-zip": "rm -f dist/kth-style-scss.zip && find ./node_modules -name \"*.scss\" | xargs zip -r dist/kth-style-scss -@ && (cd ./public/sass && find . -name \"*.scss\" | xargs zip -r ../../dist/kth-style-scss -@ )&& (cd ./dist && find ./img | xargs zip -r kth-style-scss -@ )",
    "generate-svg-data": "./generate-svg-data.sh"
  },
  "dependencies": {
    "bootstrap": "4.6.0",
    "jquery": "^3.6.0",
    "popper.js": "^1.16.1",
    "tether": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "7.15.0",
    "@kth/eslint-config-kth": "^1.0.12",
    "@parcel/transformer-sass": "^2.0.0-rc.0",
    "babel-loader": "^8.2.2",
    "babel-preset-es2015": "^6.24.1",
    "concurrently": "^6.2.0",
    "eslint": "^7.32.0",
    "husky": "^7.0.1",
    "parcel": "^2.0.0-rc.0",
    "prettier": "^2.3.2",
    "pretty-quick": "3.1.1",
    "sass": "^1.37.5"
  },
  "engines": {
    "node": ">=12"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "browserslist": [
    "> 1%",
    "not dead",
    "IE 11"
  ]
}
